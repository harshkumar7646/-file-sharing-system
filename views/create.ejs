<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-white rounded-lg shadow-lg p-8 fade-in">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Create New Vault</h1>
            <p class="text-gray-600">Set up a secure vault for sharing your files</p>
        </div>

        <form action="/vault/create" method="POST" class="space-y-6">
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-folder mr-2 text-blue-500"></i>
                    Vault Name *
                </label>
                <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200"
                    placeholder="Enter a descriptive name for your vault"
                >
            </div>

            <div>
                <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-comment mr-2 text-gray-500"></i>
                    Description (Optional)
                </label>
                <textarea 
                    id="description" 
                    name="description" 
                    rows="3"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200"
                    placeholder="Brief description of the vault contents"
                ></textarea>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label for="expiryHours" class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-clock mr-2 text-yellow-500"></i>
                        Expiry (Hours)
                    </label>
                    <input 
                        type="number" 
                        id="expiryHours" 
                        name="expiryHours" 
                        min="1"
                        max="8760"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200"
                        placeholder="24"
                    >
                    <p class="text-xs text-gray-500 mt-1">Leave empty for no expiry</p>
                </div>

                <div>
                    <label for="maxDownloads" class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-download mr-2 text-red-500"></i>
                        Max Downloads
                    </label>
                    <input 
                        type="number" 
                        id="maxDownloads" 
                        name="maxDownloads" 
                        min="1"
                        max="1000"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200"
                        placeholder="100"
                    >
                    <p class="text-xs text-gray-500 mt-1">Leave empty for unlimited</p>
                </div>
            </div>

            <div class="bg-blue-50 p-4 rounded-lg">
                <h3 class="text-sm font-medium text-blue-900 mb-2">
                    <i class="fas fa-info-circle mr-2"></i>
                    Vault Features
                </h3>
                <ul class="text-sm text-blue-800 space-y-1">
                    <li><i class="fas fa-check mr-2 text-green-500"></i> Automatic file compression for large files</li>
                    <li><i class="fas fa-check mr-2 text-green-500"></i> Secure storage with MongoDB GridFS</li>
                    <li><i class="fas fa-check mr-2 text-green-500"></i> Easy sharing with unique Vault ID</li>
                    <li><i class="fas fa-check mr-2 text-green-500"></i> Download tracking and limits</li>
                </ul>
            </div>

            <button 
                type="submit"
                class="w-full bg-blue-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-blue-700 transition duration-200 card-hover"
            >
                <i class="fas fa-plus mr-2"></i>
                Create Vault
            </button>
        </form>
    </div>

    <!-- Quick Options -->
    <div class="mt-8 text-center">
        <div class="inline-flex space-x-4 text-sm text-gray-600">
            <button onclick="setQuickExpiry(24)" class="hover:text-blue-600 transition duration-200">24 Hours</button>
            <button onclick="setQuickExpiry(168)" class="hover:text-blue-600 transition duration-200">1 Week</button>
            <button onclick="setQuickExpiry(720)" class="hover:text-blue-600 transition duration-200">30 Days</button>
        </div>
    </div>
</div>

<script>
function setQuickExpiry(hours) {
    document.getElementById('expiryHours').value = hours;
    showNotification(`Expiry set to ${hours} hours`, 'success');
}
</script>